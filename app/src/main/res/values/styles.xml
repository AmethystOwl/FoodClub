<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headerStyle">
        <item name="android:layout_width">207dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textColor">#09051C</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="infoStyle">
        <item name="android:layout_width">239dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="circularImageVIew">
        <item name="cornerSize">50%</item>
    </style>

    <style name="categoryImageVIew">
        <item name="cornerSize">10%</item>
    </style>

    <style name="favoriteImageVIew">
        <item name="cornerSize">30%</item>
    </style>

    <style name="CustomCheckbox02" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_state</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/secondaryDark</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal" />

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
